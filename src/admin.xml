<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>

	<package name="admin" namespace="/admin" extends="default">

		<interceptors>
			<interceptor name="authority" class="cn.edu.cwnu.sau.interceptor.AuthorizationInterceptor" />

			<interceptor-stack name="authority-stack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="authority" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="authority-stack"></default-interceptor-ref>
		
		<global-results>
			<result name="login" type="redirectAction">
				<param name="actionName">login</param>
				<param name="namespace">/</param>
			</result>
		</global-results>

		<action name="index" class="cn.edu.cwnu.sau.action.admin.IndexAction">
			<result name="success">/admin/index.jsp</result>
		</action>
		
		<action name="notices" class="cn.edu.cwnu.sau.action.admin.NoticeAction">
			<result name="success">/admin/notice.jsp</result>
		</action>
		
		<action name="upload" class="cn.edu.cwnu.sau.action.admin.CKEditorFileManageAction" method="upload">
		</action>
		
		<action name="browse" class="cn.edu.cwnu.sau.action.admin.CKEditorFileManageAction" method="browse">
		</action>
		
		<action name="profile" class="cn.edu.cwnu.sau.action.admin.ProfileAction">
			<result name="success">/admin/profile.jsp</result>
		</action>
		
	</package>
</struts>
