<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />

	<package name="default" namespace="/" extends="struts-default">
		
		<action name="index">
			<result name="success">/_index.jsp</result>
		</action>

		<action name="login" class="cn.edu.cwnu.sau.action.ui.LoginAction">
			<result name="success">/_login.jsp</result>
		</action>
		
		<action name="checkAuth" class="cn.edu.cwnu.sau.action.ui.LoginAction" method="checkAuth">
			<result name="error">/_login.jsp</result>
			<result name="success" type="redirect">/admin/index</result>
		</action>
		
		<action name="logout" class="cn.edu.cwnu.sau.action.ui.LoginAction" method="logout">
			<result name="success">/index.jsp</result>
		</action>

	</package>

	<include file="admin.xml" />

	<!-- Add packages here -->

</struts>
