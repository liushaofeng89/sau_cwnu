<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">
<struts>

	<constant name="struts.enable.DynamicMethodInvocation" value="false" />
	<constant name="struts.devMode" value="true" />

	<package name="default" namespace="/" extends="struts-default">

		<global-results>
			<result name="commonErrorPage">/error.jsp</result>
		</global-results>
		<global-exception-mappings>
			<exception-mapping name="commonErrorPage" exception="java.lang.Exception" result="commonErrorPage" />
		</global-exception-mappings>


		<action name="index" class="cn.edu.cwnu.sau.action.ui.IndexAction">
			<result name="success">/index_.jsp</result>
		</action>

		<action name="introduction" class="cn.edu.cwnu.sau.action.ui.IntroductionAction">
			<result name="success">/introduction_.jsp</result>
		</action>

		<action name="department" class="cn.edu.cwnu.sau.action.ui.DepartmentAction">
			<result name="success">/department_.jsp</result>
		</action>

		<action name="excellent-group" class="cn.edu.cwnu.sau.action.ui.ExcellentGroupAction">
			<result name="success">/excellent-group_.jsp</result>
		</action>

		<action name="excellent-person" class="cn.edu.cwnu.sau.action.ui.ExcellentPersonAction">
			<result name="success">/excellent-person_.jsp</result>
		</action>

		<action name="download" class="cn.edu.cwnu.sau.action.ui.DownloadAction">
			<result name="success">/download_.jsp</result>
		</action>

		<action name="login" class="cn.edu.cwnu.sau.action.ui.LoginAction">
			<result name="success">/login_.jsp</result>
		</action>

		<action name="checkAuth" class="cn.edu.cwnu.sau.action.ui.LoginAction" method="checkAuth">
			<result name="error">/login_.jsp</result>
			<result name="success" type="redirect">/admin/index</result>
		</action>

		<action name="logout" class="cn.edu.cwnu.sau.action.ui.LoginAction" method="logout">
			<result name="success" type="redirectAction">/index</result>
		</action>

		<action name="forget" class="cn.edu.cwnu.sau.action.ui.ForgetAction">
			<result name="success">forget_.jsp</result>
		</action>

		<action name="faq" class="cn.edu.cwnu.sau.action.ui.FAQAction">
			<result name="success">faq_.jsp</result>
		</action>

		<action name="contact" class="cn.edu.cwnu.sau.action.ui.ContactAction">
			<result name="success">contact_.jsp</result>
		</action>

		<action name="feedback" class="cn.edu.cwnu.sau.action.ui.FeedbackAction">
			<result name="success">feedback_.jsp</result>
		</action>

		<action name="bbs" class="cn.edu.cwnu.sau.action.ui.BBSAction">
			<result name="success">bbs_.jsp</result>
		</action>

		<action name="listnotices" class="cn.edu.cwnu.sau.action.ui.NoticeAction" method="findAll">
			<result name="success">show-list_.jsp</result>
		</action>

		<action name="notice" class="cn.edu.cwnu.sau.action.ui.NoticeAction" method="findById">
			<result name="success">show_.jsp</result>
		</action>

	</package>
	
	<package name="assocation" namespace="/assocation" extends="struts-default">
		<action name="apply" class="cn.edu.cwnu.sau.action.ui.AssociationsAction" method="apply">
			<result name="success">../apply_.jsp</result>
		</action>
		
		<action name="list" class="cn.edu.cwnu.sau.action.ui.AssociationsAction" method="list">
		</action>
		
		<action name="show" class="cn.edu.cwnu.sau.action.ui.AssociationsAction" method="show">
		</action>
	</package>

	<package name="global-error" namespace="" extends="struts-default">
		<action name="*">
			<result>/404.jsp</result>
		</action>
	</package>

	<include file="admin.xml" />
</struts>
